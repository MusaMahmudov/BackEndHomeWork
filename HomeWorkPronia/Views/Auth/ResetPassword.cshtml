@using HomeWorkPronia.ViewModels.LoginViewModels;

@{
    ViewData["Title"] = "ResetPassword";
}
@model ResetPasswordViewModel
<div class="container">
    <div class="row">
        <div class="col-lg-12 pt-5 pt-lg-0 m-5">
            <form method="post">
                <div class="login-form">
                    <h4 class="login-title">Reset Password</h4>
                    <div class="row">
                        <div class="text-danger" asp-validation-summary="ModelOnly">
                        </div>
                        <div class="col-md-12">
                            <label>New Password</label>
                            <input asp-for="NewPassword" placeholder="New Password" />
                            <span class="text-danger" asp-validation-for="NewPassword"></span>
                        </div>
                        <div class="col-md-12">
                            <label>Confirm Password</label>
                            <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>
                        
                        <div class="col-12">
                            <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                                Reset password
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
