
@{
    ViewData["Title"] = "Login";
}
@using HomeWorkPronia.ViewModels.LoginViewModels;
@model LoginViewModel
<div class="container">
    <div class="row">
<div class="col-lg-12 pt-5 pt-lg-0 m-5">
    <form method="post">
        <div class="login-form">
            <h4 class="login-title">Login</h4>
            <div class="row">
                        <div class="text-danger" asp-validation-summary="ModelOnly">
                </div>
                <div class="col-md-12">
                    <label>Username or Email</label>
                    <input asp-for="UsernameOrEmail" placeholder="Username or Email" />
                    <span class="text-danger" asp-validation-for="UsernameOrEmail"></span>
                </div>
                <div class="col-md-12">
                    <label>Password</label>
                    <input asp-for="Password" placeholder="Password" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                        <div class="col-md-8">
                            <div class="check-box">
                                <input type="checkbox" asp-for="RememberMe" id="remember_me" />
                                <label for="remember_me">Remember me</label>
                            </div>
                        </div>
                        <div class="col-md-4 pt-1 mt-md-0">
                            <div class="forgotton-password_info">
                                <a asp-action="ForgotPassword"> Forgotten pasward?</a>
                            </div>
                        </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                        Login
                    </button>
                </div>
            </div>
        </div>
    </form>
    </div>
    </div>
</div>