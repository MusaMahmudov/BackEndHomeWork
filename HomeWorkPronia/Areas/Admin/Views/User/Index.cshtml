
@{
    ViewData["Title"] = "Index";
}
@using HomeWorkPronia.Models.Identity;
@model IEnumerable<AppUser>
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Users</h4>

                    <div class="table-responsive">


                      


                        <table class="table">
                            <thead>
                                <tr>
                                    <th>FullName</th>
                                    <th>UserName</th>
                                    <th>Email</th>
                                    <th>Actions</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (AppUser user in Model)
                                {
                                    <tr>
                                        <td>@user.Fullname </td>
                                        <td>@user.UserName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            <td>
                                            <a class="btn btn-warning" asp-action="Detail" asp-route-id="@user.Id">Detail</a>
                                            </td>
                                            <td>
                                            <a class="btn btn-warning" asp-action="ChangeRole" asp-route-id="@user.Id">Change Role</a>
                                            </td>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- content-wrapper ends -->
