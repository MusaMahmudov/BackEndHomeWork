
@{
    ViewData["Title"] = "Detail";
}

@model DetailProductViewModel
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">

        <div class="card-body">

            <a class="btn btn-primary" asp-action="index">GO BACK</a>

            <img src="~/assets/images/website-images//@Model.Image" style="width:25%" />
            <h1>Name: @Model.Name</h1>
            <h1>Description: @Model.Description</h1>
            <h1> Price:@Model.Price</h1>
            <h1> Rating:@Model.Rating</h1>
            <h1>CreatedBy: @Model.CreatedBy</h1>
            <h1> CreatedDate:@Model.CreatedDate</h1>
            <h1> UpdatedBy:@Model.UpdatedBy</h1>
            <h1>UpdateTime:@Model.UpdateTime</h1>
            <h1>CategoryName:@Model.CategoryName</h1>


        </div>
    </div>
</div>
